<h1><%= t('people.page_name.show') %></h1>
<%= @person.id %>
<%= @person.first_name %>
<%= @person.middle_name %>
<%= @person.last_name %>
<%= @person.user_name %>
<%= @person.nationality %>
<%= @person.birth_date %>
<%= @person.currently_working_as %>
<%= @person.currently_working_at %>
<%= @person.currently_living_in %>
<%= @person.is_privately_wanted %>
<%= @person.is_publicly_wanted %>
<%= @person.is_dangerous %>
<%= @person.gender %>
<%= @person.last_seen_date %>
<%= @person.last_seen_place %>

<%= link_to t('button.edit'), edit_person_path(@person), class: 'button is-info' %>
<%= link_to t('button.back'), root_path, class: 'button is-info is-light' %>
<%= link_to t('button.destroy'),
            person_path(@person),
            class: 'button is-danger',
            data: {
  turbo_method: :delete,
  turbo_confirm: t('action.confirmation'),
} %>

<%= render 'networks/list' %>
<%= render 'networks/form' %>

<%= render 'emails/list' %>
<%= render 'emails/form' %>