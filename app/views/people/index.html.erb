<h1><%= t('people.page_name.index') %></h1>

<%= current_user.email %>
<%= current_user.role %>
<%= current_user.admin? %>

<%= link_to 'Sign out', destroy_user_session_path, method: :delete %>

<%= render 'multisearchable' %>

<% if @results.present? %>
  <%= @r.first_name %>
<% end %>


<ul>
  <% @people.each do |people| %>
    <li>
      <%= link_to people.first_name, people %>
    </li>
  <% end %>

  <%= link_to t('people.page_name.create'), new_person_path %>
</ul>
