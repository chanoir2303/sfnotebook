<h1><%= I18n.t('page.people.index') %></h1>

<%= render 'multisearchable' %>

<% if @results.present? %>
  <%= @r.first_name %>
<% end %>

<ul>
  <% @people.each do |people| %>
    <li>
      <%= link_to people.first_name, people %>
    </li>
  <% end %>

  <%= link_to I18n.t('page.people.create'), new_person_path %>
</ul>
